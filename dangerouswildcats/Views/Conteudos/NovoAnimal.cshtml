@{

    Layout = "MyLayout";
    ViewData["Title"] = "Novo Animal";

}



<div class="margem5"></div>

<div class="margem"></div>
<h1>Espécies em (ou em risco de) extinção!</h1>
<div class="margem4"></div>



@model AnimaisExtincao

<div class="container">
    <div class="text-center">
        <h4>Deixa aqui o teu contributo preenchendo os seguintes campos</h4>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="NovoAnimal" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>
                <div class="row">
                    <div class="col-8">
                        <label asp-for="NomeAnimal">Nome: *</label>
                        <input class="form-control" id="NomeAnimal" name="NomeAnimal" asp-for="NomeAnimal" />
                    </div>
                </div>

                <div class="m-25"></div>

                <div class="row">
                    <div class="col-8">
                        <label asp-for="Descricao">Descrição: *</label>
                        <textarea class="form-control" id="Descricao" name="Descricao" asp-for="Descricao" cols="50" rows="5" style="width:100%"></textarea>
                    </div>
                </div>

                <div class="m-25"></div>

                <div class="row">
                    <div class="col-5">
                        <fieldset>
                            <label for="Image">Anexar Imagem: *</label>
                            <div class="m-25">
                                <input type="file" name="Figura" />
                            </div>
                        </fieldset>
                    </div>
                </div>


                <div class="margem">
                    <small>Os campos assinalados com (*) são de preenchimento obrigatório</small>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-light btn-outline-info">Adicionar Animal</button>
                </div>

            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>

