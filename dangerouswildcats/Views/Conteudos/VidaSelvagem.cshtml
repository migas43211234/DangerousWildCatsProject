                    @foreach (AnimaisExtincao a in Model)
                    {
                        if (a.Aprovacao == true)
                        {
                        <div class="col-md-3">
                            <div class="d-grid">
                                <img class="figure-img img-fluid rounded" src="~/@a.URLFicheiro" style="width:400px;height:200px;">
                                <button class="btn btn-info btn-outline-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="@String.Concat("#e", String.GetHashCode(a.NomeAnimal).ToString())" aria-expanded="false" aria-controls="@String.Concat("e", String.GetHashCode(a.NomeAnimal).ToString())" style="margin-bottom:8px">
                                    @a.NomeAnimal
                                </button>
                                <div class="collapse" id="@String.Concat("e", String.GetHashCode(a.NomeAnimal).ToString())">
                                    <div class="card card-body" style="background:black;">
                                        <p2>
                                            @a.Descricao
                                        </p2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }

                    }
                </div>
                <div class="margem"></div>
                <div class="text-center">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-info btn-outline-dark text-white" asp-action="NovoAnimal"><span class="glyphicon"></span> Adicionar Animal </a>
                    }
                    else
                    {
                        <h4> Não pode adicionar um animal sem estar autenticado! </h4>
                    }
                </div>
                <div class="margem"></div>
            </div>
        </div>
    </div>
</div>