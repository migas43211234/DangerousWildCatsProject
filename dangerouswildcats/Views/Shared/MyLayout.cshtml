<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title> @ViewData["Title"] </title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="~/recursos/Home/websiteicon.png">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>

    @using Microsoft.AspNetCore.Identity
    @using dangerouswildcats.Areas.Identity.Data
    @inject SignInManager<dangerouswildcatsUser> SignInManager
    @inject UserManager<dangerouswildcatsUser> UserManager

    <a id="topo">&nbsp;</a>

    <!--NAVBAR-->
    <nav class="navbar fixed-top navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3.293l6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                    <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                </svg>

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">inicio</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Contactos">contactos</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="SobreNos">sobre nós</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">o nosso trabalho</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="dropdown dropright">
                                <a class="dropdown-item" asp-controller="Conteudos" asp-action="Agua">agua<i class="bi bi-caret-right-fill"></i></a>
                                <ul class="dropdown-menu dropdown-content">
                                    <li><a asp-controller="Conteudos" asp-action="AguaProblematica" class="dropdown-item">problemática</a></li>
                                    <li><a asp-controller="Conteudos" asp-action="AguaPreservacao" class="dropdown-item">preservação</a></li>
                                </ul>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Conteudos" asp-action="Clima">clima</a></li>
                            <li><a class="dropdown-item" asp-controller="Conteudos" asp-action="Floresta">floresta</a></li>
                            <li><a class="dropdown-item" asp-controller="Conteudos" asp-action="Oceanos">oceanos</a></li>
                            <li><a class="dropdown-item" asp-controller="Conteudos" asp-action="VidaSelvagem">vida selvagem</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" aria-current="page" asp-controller="Voluntariado" asp-action="Index">voluntariado</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="dropdown dropright">

                                <a class="dropdown-item" asp-controller="Voluntariado" asp-action="Index" asp-fragment="linkvoluntariado"> faca voluntariado </a>

                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" aria-current="page" asp-controller="Reciclagem" asp-action="Index">reciclagem</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="dropdown dropright">

                                <a class="dropdown-item" asp-controller="Reciclagem" asp-action="Index" asp-fragment="linkjogo"> jogo reciclagem </a>

                            </li>
                        </ul>
                    </li>

                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">gestao</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>

                                    <a class="dropdown-item" asp-controller="Conteudos" asp-action="ListaAnimaisExtincao">animais em vias de extincao</a>

                                    <a class="dropdown-item" asp-controller="Conteudos" asp-action="ListaAnimaisExtincaoOceanos"> animais dos oceanos em vias de extinção </a>

                                    <a class="dropdown-item" asp-controller="Voluntariado" asp-action="ListaCalendario">calendário</a>

                                    <a class="dropdown-item" asp-controller="Conteudos" asp-action="ListaMedidas">medidas de preservação da agua</a>

                                    <a class="dropdown-item" asp-controller="UserRoles" asp-action="Index">utilizadores</a>

                                    <a class="dropdown-item" asp-controller="Voluntariado" asp-action="ListaVoluntarios">voluntarios</a>

                                </li>
                            </ul>
                        </li>
                    }

                </ul>

                <partial name="/Views/Shared/_LoginPartial.cshtml" />

            </div>
        </div>
    </nav>

    @RenderBody()

    <a href="#topo">
        <div id="botao_topo">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-arrow-up-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 0 0 8a8 8 0 0 0 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z" />
            </svg>
        </div>
    </a>

    <footer class="text-center">
        <div class="margem2"></div>
        <div class="container">
            <div class="col-md-12">
                <h5 class="text-uppercase">Adere à nossa newsletter</h5>
                <form action="http://symlink.dk/code/php/submit/" method="post">
                    <label>E-mail:</label>
                    <input type="email" id="email" name="email" required="required">
                    <button type="submit" class="btn btn-info">Subscrever Newsletter</button>
                </form>
                <h>Segue-nos em:</h>
                <a href="https://twitter.com/?lang=pt" class='fab fa-twitter-square' style='color:deepskyblue'></a>
                <a href="https://www.facebook.com/" class='fab fa-facebook-square' style='color:deepskyblue'></a>
                <a href="https://www.instagram.com/accounts/login/" class='fab fa-instagram' style='color:deepskyblue'></a>
            </div>
        </div>
        <!-- Copyright -->
        <div class="text-center p-3" style="height:100px;">
            <a style="color:aquamarine" asp-controller="Home" asp-action="PoliticaPrivacidade">Política de Privacidade</a>
            <p>Ana Pereira, Carlos Santos, Carolina Lourenço, Miguel Santana, Rita Malaquias, Rui Ferreira</p>
            <p>Dangerous Wildcats © 2021</p>
        </div>
    </footer>

    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
