@{
    Layout = "MyLayout";
    ViewData["Title"] = "Confirmação de inscrição";
}

@model Voluntariado

<div class="m-100"></div>

<div class="container">
    <div class="text-center">
        <div class="m-25">
            <p class="text-center">
                Obrigado(a) <b>@Model.Nome</b> por te juntares a nós.
            </p>

            <div class="m-25"></div>

            <p class="text-center">
                Brevemente iremos contactar-te através do email <b>@Model.Email</b>.
            </p>

            <div class="m-25"></div>

            <p class="text-center">
                <b>Até breve!</b>
            </p>
        </div>
    </div>

    <div class="text-center">
        <img src="~/recursos/Home/DWC LOGO 2.0 PNG.png" style="width:200px; height:200px" />
    </div>

    <div class="m-30"></div>

    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Voluntariado" asp-action="Index"><span class="glyphicon"></span> Voltar à página de voluntariado</a>
    </div>

    <div class="m-80"></div>
</div>



